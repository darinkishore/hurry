#!/usr/bin/env bash
# Remove a member from an organization.
set -euo pipefail

source "$(dirname "$0")/_common"

check_deps
check_url

if [ $# -ne 2 ]; then
  echo "Usage: $0 <org-id> <account-id>" >&2
  echo "Remove a member from an organization (admin only)" >&2
  exit 1
fi

ORG_ID="$1"
ACCOUNT_ID="$2"

if ! [[ "$ORG_ID" =~ ^[0-9]+$ ]]; then
  echo "Error: Organization ID must be a number" >&2
  exit 1
fi

if ! [[ "$ACCOUNT_ID" =~ ^[0-9]+$ ]]; then
  echo "Error: Account ID must be a number" >&2
  exit 1
fi

response=$(api_delete "/api/v1/organizations/${ORG_ID}/members/${ACCOUNT_ID}")
status_code=$(echo "$response" | tail -n1)

if [[ "$status_code" == "204" ]]; then
  echo "Member removed successfully."
else
  body=$(echo "$response" | sed '$d')
  echo "Error: HTTP $status_code" >&2
  echo "$body" >&2
  exit 1
fi
