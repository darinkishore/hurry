#!/usr/bin/env bash
# Create a new API key for an organization.
set -euo pipefail

source "$(dirname "$0")/_common"

check_deps
check_url

if [ $# -ne 2 ]; then
  echo "Usage: $0 <org-id> <name>" >&2
  echo "Create a new API key for the organization" >&2
  echo "" >&2
  echo "The API key token will only be shown once. Save it immediately!" >&2
  exit 1
fi

ORG_ID="$1"
NAME="$2"

if ! [[ "$ORG_ID" =~ ^[0-9]+$ ]]; then
  echo "Error: Organization ID must be a number" >&2
  exit 1
fi

BODY=$(jq -nc --arg name "$NAME" '{name: $name}')
response=$(api_post "/api/v1/organizations/${ORG_ID}/api-keys" "$BODY")
if handle_response "$response"; then
  echo ""
  echo "IMPORTANT: Save the 'token' value above. It will not be shown again!"
fi
